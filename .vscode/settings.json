{
  // Программирование в целом
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,

  // Линтеры / форматтеры / чекеры
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "stylelint.autoFixOnSave": true,
  "stylelint.useLocal": true,
  "cSpell.language": "en,ru",
  "cSpell.words": ["antd", "reduxjs"],

  // Прочее полезное
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "type": "text-and-comment",
      "icon": "checkbox",
      "iconColour": "#00a6fb",
      "foreground": "#fcfcfc",
      "background": "#00a6fb",
      "fontWeight": "700"
    },
    "Later": {
      "type": "text-and-comment",
      "icon": "stopwatch",
      "iconColour": "#586f7c",
      "foreground": "#fcfcfc",
      "background": "#586f7c",
      "fontWeight": "700"
    },
    "[ ]": {
      "type": "tag",
      "icon": "issue-draft",
      "iconColour": "#edede9",
      "foreground": "#a7b2Ba"
    },
    "[x]": {
      "type": "tag",
      "icon": "x-circle",
      "iconColour": "#d5546d",
      "foreground": "#a7b2Ba"
    },
    "[v]": {
      "type": "tag",
      "icon": "check-circle",
      "iconColour": "#65cd7d",
      "foreground": "#a7b2Ba"
    },
    "FIXME": {
      "type": "text-and-comment",
      "iconColour": "#d5546d",
      "foreground": "#fcfcfc",
      "background": "#d5546d",
      "fontWeight": "700"
    }
  },
  "todo-tree.general.tags": ["FIXME", "TODO", "Later", "[ ]", "[x]", "[v]"]

  // Внешний вид (опционально)
  // "workbench.colorTheme": "One Dark Pro Darker",
  // "workbench.iconTheme": "material-icon-theme"
}
